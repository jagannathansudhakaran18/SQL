SELECT 
    customers.customer_name,
    orders.product_name,
    orders.amount
FROM customers
INNER JOIN orders
ON customers.customer_id = orders.customer_id;

SELECT 
    customers.customer_name,
    orders.product_name,
    orders.amount
FROM customers
LEFT JOIN orders
ON customers.customer_id = orders.customer_id;
